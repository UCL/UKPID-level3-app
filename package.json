{
  "name": "ukpid-level3-app",
  "version": "1.0.0",
  "description": "Frontend app extension of the UKPID database to support of level 3 studies",
  "main": "index.js",
  "scripts": {
    "dev": "next",
    "build": "next build",
    "start": "next start",
    "test": "jest",
    "lint": "eslint \"pages/**\" \"components/**\" \"*.setup.js\"",
    "prettier-check": "prettier --check \"components/**/*.{js,jsx,json,md}\"",
    "prettier-fix": "prettier --write \"components/**/*.{js,jsx,json,md}\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/UCL/UKPID-level3-app.git"
  },
  "author": "David Guzman",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/UCL/UKPID-level3-app/issues"
  },
  "homepage": "https://github.com/UCL/UKPID-level3-app#readme",
  "dependencies": {
    "@material-ui/core": "^4.11.0",
    "@material-ui/icons": "^4.9.1",
    "next": "^9.5.3",
    "prop-types": "^15.7.2",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "swr": "^0.3.5"
  },
  "devDependencies": {
    "babel-eslint": "^10.1.0",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.5",
    "eslint": "^7.10.0",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-prettier": "^6.12.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.0.2",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.21.2",
    "eslint-plugin-react-hooks": "^4.1.2",
    "jest": "^26.4.2",
    "prettier": "^2.1.2"
  },
  "jest": {
    "setupFilesAfterEnv": [
      "<rootDir>tests.setup.js"
    ]
  },
  "babel": {
    "presets": [
      "next/babel"
    ]
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": [
      "airbnb",
      "prettier",
      "plugin:jest/all"
    ],
    "plugins": [
      "prettier",
      "jest"
    ],
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "env": {
      "jest": "true",
      "node": true,
      "es6": true,
      "browser": true,
      "jest/globals": true
    },
    "rules": {
      "react/jsx-filename-extension": [
        1,
        {
          "extensions": [
            ".js"
          ]
        }
      ],
      "react/jsx-fragments": [
        1,
        "element"
      ],
      "react/forbid-prop-types": [
        "warn",
        {
          "forbid": [
            "any",
            "array"
          ]
        }
      ]
    }
  },
  "prettier": {
    "singleQuote": true
  }
}
