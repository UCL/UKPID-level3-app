{
  "name": "ukpid-level3-app",
  "version": "1.0.0",
  "description": "Frontend app extension of the UKPID database to support of level 3 studies",
  "main": "index.js",
  "scripts": {
    "dev": "next",
    "build": "next build",
    "start": "next start",
    "test": "jest",
    "lint": "eslint \"pages/**\" \"components/**\" \"*.setup.js\"",
    "prettier-check": "prettier --check \"components/**/*.{js,jsx,json,md}\"",
    "prettier-fix": "prettier --write \"components/**/*.{js,jsx,json,md}\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/UCL/UKPID-level3-app.git"
  },
  "author": "David Guzman",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/UCL/UKPID-level3-app/issues"
  },
  "homepage": "https://github.com/UCL/UKPID-level3-app#readme",
  "dependencies": {
    "@material-ui/core": "^4.8.3",
    "@material-ui/icons": "^4.9.1",
    "next": "^9.1.7",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "swr": "^0.2.3"
  },
  "devDependencies": {
    "babel-eslint": "^10.1.0",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-plugin-import": "^2.19.1",
    "eslint-plugin-jest": "^23.13.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.17.0",
    "eslint-plugin-react-hooks": "^1.7.0",
    "jest": "^24.9.0",
    "prettier": "^1.19.1"
  },
  "jest": {
    "setupFilesAfterEnv": [
      "<rootDir>tests.setup.js"
    ]
  },
  "babel": {
    "presets": [
      "next/babel"
    ]
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": [
      "airbnb",
      "prettier"
    ],
    "plugins": [
      "prettier"
    ],
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "env": {
      "jest": "true"
    },
    "rules": {
      "react/jsx-filename-extension": [
        1,
        {
          "extensions": [
            ".js"
          ]
        }
      ],
      "comma-dangle": [
        "error",
        {
          "functions": "never",
          "exports": "always-multiline"
        }
      ]
    }
  },
  "prettier": {
    "singleQuote": true
  }
}
